<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.demo1.controllers.ProfileController"
            prefHeight="600.0" prefWidth="800.0">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #3498db;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Button fx:id="backButton" text="Back to Dashboard" onAction="#onBackButtonClick"/>
            <Label text="User Profile" textFill="WHITE" style="-fx-font-size: 20px;"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton" text="Logout" onAction="#onLogoutButtonClick"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="20" alignment="TOP_CENTER">
                <padding>
                    <Insets top="30" right="40" bottom="30" left="40"/>
                </padding>

                <!-- Header Section -->
                <VBox alignment="CENTER" spacing="10">
                    <Label fx:id="usernameLabel" text="Username" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Label fx:id="emailLabel" text="user@example.com" style="-fx-font-size: 16px; -fx-text-fill: #555;"/>
                    <Label fx:id="joinDateLabel" text="Member since: Jan 1, 2025" style="-fx-font-size: 14px; -fx-text-fill: #777;"/>
                </VBox>

                <Separator />

                <!-- Profile Edit Section -->
                <TitledPane text="Edit Profile" expanded="false">
                    <VBox spacing="15">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>

                        <VBox spacing="5">
                            <Label text="Full Name"/>
                            <TextField fx:id="fullNameField" promptText="Enter your full name"/>
                        </VBox>

                        <Button text="Update Profile" onAction="#onUpdateProfileClick"
                                style="-fx-background-color: #3498db; -fx-text-fill: white;"
                                maxWidth="200"/>

                        <Label fx:id="updateMessage" />
                    </VBox>
                </TitledPane>

                <!-- Change Password Section -->
                <TitledPane text="Change Password" expanded="false">
                    <VBox spacing="15">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>

                        <VBox spacing="5">
                            <Label text="Current Password"/>
                            <PasswordField fx:id="currentPasswordField" promptText="Enter current password"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="New Password"/>
                            <PasswordField fx:id="newPasswordField" promptText="Enter new password"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Confirm New Password"/>
                            <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password"/>
                        </VBox>

                        <Button text="Change Password" onAction="#onChangePasswordClick"
                                style="-fx-background-color: #3498db; -fx-text-fill: white;"
                                maxWidth="200"/>

                        <Label fx:id="passwordMessage" />
                    </VBox>
                </TitledPane>

                <!-- Progress Section -->
                <TitledPane text="Learning Progress" expanded="true">
                    <VBox spacing="15">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>

                        <Label text="Completed Tutorials" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                        <Label fx:id="completedTutorialsLabel" text="0 tutorials completed"/>
                        <ProgressBar fx:id="tutorialsProgress" progress="0.0" maxWidth="Infinity"/>

                        <Label text="Solved Problems" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                        <Label fx:id="completedProblemsLabel" text="0 problems solved"/>
                        <ProgressBar fx:id="problemsProgress" progress="0.0" maxWidth="Infinity"/>
                    </VBox>
                </TitledPane>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Text text="Â© 2025 Data Structures Visualizer Team" style="-fx-font-size: 12px;"/>
        </HBox>
    </bottom>

</BorderPane>