<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.demo1.controllers.TutorialController"
            prefHeight="1000.0" prefWidth="1500.0">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #3498db;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Button fx:id="backButton" text="Back to Dashboard" onAction="#onBackButtonClick"/>
            <Label text="Tutorials Library" textFill="WHITE" style="-fx-font-size: 20px;"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fx:id="tutorialScrollPane" fitToWidth="true">
            <VBox fx:id="tutorialsContainer" spacing="20">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <!-- Tutorial content will be loaded dynamically -->
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Text text="Â© 2025 Data Structures Visualizer Team" style="-fx-font-size: 12px;"/>
        </HBox>
    </bottom>

</BorderPane>